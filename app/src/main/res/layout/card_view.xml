<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@android:color/transparent">

    <RelativeLayout
        android:layout_width="360dp"
        android:layout_height="500dp"
        android:layout_centerInParent="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@android:color/white"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_margin="38dp"
                android:layout_width="300dp"
                android:layout_height="300dp">
                <ImageView
                    android:id="@+id/weather_image"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:adjustViewBounds="true"
                    android:src="@mipmap/sun"
                    android:layout_centerHorizontal="true"/>
            </RelativeLayout>
        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerInParent="true"
            android:background="@mipmap/frame"/>


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_marginLeft="24dp"
            android:layout_marginRight="24dp"
            android:layout_marginBottom="10dp"
            android:layout_alignParentBottom="true">
            <TextView
                android:id="@+id/card_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textStyle="bold"
                android:textColor="@android:color/black"
                android:textSize="24dp"
                android:padding="4dp"
                android:text="32"/>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginRight="25dp"
            android:layout_marginBottom="57dp"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true">
            <TextView
                android:id="@+id/temperature_value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:textStyle="bold"
                android:textColor="@android:color/black"
                android:textSize="32dp"
                android:text="32"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:textSize="18dp"
                android:textColor="@android:color/black"
                android:text="℃"
                android:layout_alignBottom="@+id/temperature_value"
                android:layout_toRightOf="@+id/temperature_value"/>
        </RelativeLayout>

        <TextView
            android:id="@+id/detail_value"
            android:layout_width="280dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="155dp"
            android:layout_centerHorizontal="true"
            android:layout_alignParentBottom="true"
            android:gravity="center"
            android:textColor="@android:color/black"
            android:textSize="24dp"
            android:layout_centerInParent="true"
            android:text="大阪府大阪市"/>

        <RelativeLayout
            android:layout_width="130dp"
            android:layout_height="100dp"
            android:layout_marginLeft="40dp"
            android:layout_marginBottom="40dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentBottom="true">

            <TextView
                android:id="@+id/rainy_value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:textColor="@android:color/black"
                android:textSize="32dp"
                android:layout_centerInParent="true"
                android:text="P.P 32"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:textSize="18dp"
                android:textColor="@android:color/black"
                android:text="%"
                android:layout_alignBottom="@+id/rainy_value"
                android:layout_toRightOf="@+id/rainy_value" />

        </RelativeLayout>
        <TextView
            android:id="@+id/address_value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:layout_marginRight="25dp"
            android:layout_marginBottom="17dp"

            android:textStyle="bold"
            android:textColor="#B18904"
            android:textSize="12dp"
            android:layout_centerInParent="true"
            android:text="大阪府大阪市"/>

        <TextView
            android:id="@+id/date_value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:layout_marginRight="35dp"
            android:layout_marginTop="30dp"

            android:textStyle="bold"
            android:textColor="@android:color/black"
            android:textSize="12dp"
            android:gravity="right"
            android:layout_centerInParent="true"
            android:text="2017.08.06 12:00"/>

    </RelativeLayout>
</RelativeLayout>
